@model EDNIFF.ViewModel.EmployeeCreateVM




<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style type="text/css">
        html, body {
            height: 100%;
        }

        .global-container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f5f5f5;
        }

        form {
            padding-top: 10px;
            font-size: 14px;
            margin-top: 30px;
        }

        .card-title {
            font-weight: 300;
        }

        .btn {
            font-size: 14px;
            margin-top: 20px;
        }


        .login-form {
            width: 330px;
            margin: 20px;
        }

        .sign-up {
            text-align: center;
            padding: 20px 0 0;
        }

        .alert {
            margin-bottom: -30px;
            font-size: 13px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="global-container">
        <div class="card login-form">
            <div class="card-body">
                <h3 class="card-title text-center">Log in to EDNIFF</h3>
                <div class="card-text">
                    <!--
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
                    <form asp-controller="Login" asp-action="Login" method="post">

                        <div class="form-group">
                            <label asp-for="LoginURL" >Login Here</label>
                            <select asp-for="LoginURL" class="form-control form-control-sm">
                                <option value="1">Live Mode</option>
                                <option value="2">Test Mode</option>
                                <option value="3">Local Mode</option>
                            </select>
                        </div>

                        <!-- to error: add class "has-danger" -->
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            <input type="text" asp-for="Username" class="form-control form-control-sm" >
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            @*<a href="#" style="float:right;font-size:12px;">Forgot password?</a>*@
                            <input type="password" asp-for="Password" class="form-control form-control-sm" >
                        </div>

                        <div class="form-group">
                            <label class="checkbox" asp-for="RememberMe">
                                <input type="checkbox" asp-for="RememberMe" > Remember me
                            </label>
                        </div>



                        <button type="submit" class="btn btn-primary btn-block">Sign in</button>

                        @*<div class="sign-up">
                                Don't have an account? <a href="#">Create One</a>
                            </div>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



